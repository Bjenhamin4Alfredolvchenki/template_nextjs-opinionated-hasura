    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "ignore-loader": "^0.1.2",
    "jest": "^27.0.6",
    "node-fetch": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^5.1.2",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "postcss-loader": "^4.1.0",
    "prettier": "^2.3.2",
    "react-test-renderer": "^17.0.2",
    "sharp": "^0.28.3",
    "storybook": "^6.3.6",
    "storybook-addon-next-router": "^3.0.5",
    "tailwindcss": "^2.2.7",
    "typescript": "4.3.5",
    "zod": "^3.7.1"
  },
  "resolutions": {
    "react": "17.0.2"
  },
  "browserslist": [
    ">0.3%",
    "not ie 11",
    "not dead",
    "not op_mini all"
  ],
  "jest": {
    "testPathIgnorePatterns": [
      "./.next/",
      "./node_modules/",
      "./.storybook/"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "moduleNameMapper": {
      "\\.svg": "<rootDir>/__mocks__/svgrMock.js"
    }
  }
}
