{
  "name": "nextjs-opinionated-hasura",
  "version": "0.3.0",
  "scripts": {
    "build": "next build",
    "build:tailwind": "postcss src/scss/base.scss -o src/scss/tailwind.scss",
    "dev": "yarn dockerClear; run-p hasuraLocal genWatch devNext",
    "dockerClear": "docker ps -aq | xargs -I {} docker stop {}; docker ps -aq | xargs -I {} docker rm {}",
    "format": "prettier --write .",
    "gen": "graphql-codegen --config codegen.yml && prettier ./src/graphql/generated.ts --write --config .prettierrc",
    "genWatch": "bash ./hasura/wait-for-url.sh && chokidar \"./src/graphql/gqls/**/*.gql\" \"./hasura/migrations/**/*.sql\" --initial -c \"yarn gen\"",
    "devNext": "cross-env NODE_OPTIONS=\"--inspect\" next dev -p 3000 | pino-pretty -i time,pid,hostname -c",
    "devRemote": "run-p devNext genWatchRemote",
    "genRemote": "graphql-codegen --config codegen.remote.yml && prettier ./src/graphql/generated.ts --write --config .prettierrc",
    "genWatchRemote": "chokidar \"./src/graphql/gqls/**/*.gql\" --initial -c \"yarn genRemote\"",
    "hasuraLocal": "(cd ./hasura; concurrently --raw 'docker-compose up' 'bash ./wait-for-url.sh && hasura console --skip-update-check --no-browser --console-port 9696')",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "migrationLocalApply": "export $(cat .env.local | xargs) && (cd ./hasura; hasura migrate apply --skip-update-check --admin-secret=$HASURA_ADMIN_SECRET; hasura metadata apply --skip-update-check --admin-secret=$HASURA_ADMIN_SECRET)",
    "migrateLocalToProd": "export $(cat .env.local | xargs) && (cd ./hasura; hasura migrate apply --skip-update-check --endpoint \"$HASURA_PROD_SERVER_URL\" --admin-secret=$HASURA_PROD_ADMIN_SECRET; hasura metadata apply --skip-update-check --endpoint \"$HASURA_PROD_SERVER_URL\" --admin-secret=$HASURA_PROD_ADMIN_SECRET)",
    "start": "next start",
    "storybook": "start-storybook --ci -p 5000",
    "swr": "^0.5.6",
    "test": "jest",
    "test-all": "yarn lint && yarn type-check && yarn test",
    "type-check": "tsc --pretty --noEmit"
  },
  "dependencies": {
    "@hookform/resolvers": "^2.5.1",
    "classnames": "^2.3.1",
    "@headlessui/react": "^1.2.0",
    "daisyui": "^1.3.1",
    "dayjs": "^1.10.4",
    "graphql": "^15.5.0",
    "graphql-request": "^3.4.0",
    "graphql-tag": "^2.12.4",
    "lodash": "^4.17.21",
    "next": "10.2.3",
    "query-string": "^7.0.0",
    "next-themes": "^0.0.14",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.7.1",
    "react-icons": "^4.2.0",
    "sweetalert2": "^11.0.16",
    "sweetalert2-react-content": "^4.0.1",
    "swr": "^0.5.6",
    "validator": "^13.6.0",
    "zod": "^3.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-react": "^7.13.13",
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "1.21.4",
    "@graphql-codegen/typescript": "1.22.0",
    "@graphql-codegen/typescript-graphql-request": "^3.2.0",
    "@graphql-codegen/typescript-operations": "1.17.16",
    "@next/plugin-storybook": "^10.2.3",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/addon-viewport": "^6.2.9",
    "@storybook/addons": "^6.2.9",
    "@storybook/node-logger": "^6.2.9",
    "@storybook/react": "^6.2.9",
    "@storybook/theming": "^6.2.9",
    "@svgr/webpack": "^5.5.0",
    "@tailwindcss/forms": "^0.3.2",
    "@testing-library/dom": "^7.31.0",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^13.1.9",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.169",
    "@types/node": "^15.6.2",
    "@types/react": "^17.0.9",
    "@types/react-dom": "^17.0.6",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "autoprefixer": "^10.2.6",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^27.0.2",
    "chokidar": "^3.5.1",
    "chokidar-cli": "^2.1.0",
    "concurrently": "^6.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.24.0",
    "ignore-loader": "^0.1.2",
    "jest": "^27.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1",
    "postcss-loader": "^4.1.0",
    "prettier": "^2.3.0",
    "react-test-renderer": "^17.0.2",
    "sharp": "^0.28.3",
    "storybook": "^6.2.9",
    "storybook-addon-next-router": "^2.0.4",
    "tailwindcss": "^2.1.4",
    "typescript": "4.2.2"
  },
  "resolutions": {
    "react": "17.0.2"
  },
  "browserslist": [
    ">0.3%",
    "not ie 11",
    "not dead",
    "not op_mini all"
  ],
  "jest": {
    "testPathIgnorePatterns": [
      "./.next/",
      "./node_modules/",
      "./.storybook/"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "moduleNameMapper": {
      "\\.svg": "<rootDir>/__mocks__/svgrMock.js"
    }
  }
}
