{
  "name": "nextjs-opinionated-hasura",
  "version": "0.3.0",
  "private": false,
  "author": {
    "email": "saitodisse@gmail.com",
    "name": "julio saito",
    "url": "https://nextjs-opinionated.vercel.app/"
  },
  "keywords": [
    "boilerplate",
    "daisyui",
    "jest",
    "next.js",
    "react",
    "react-hook-form",
    "storybook",
    "tailwindcss",
    "typescript",
    "validator",
    "zod"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production next build",
    "build:tailwind": "postcss src/scss/base.scss -o src/scss/tailwind.scss",
    "dev": "yarn dockerClear; run-p hasuraLocal genWatch devNext",
    "devNext": "cross-env NODE_OPTIONS=\"--inspect\" next dev -p 3000 | pino-pretty -i time,pid,hostname -c",
    "devRemote": "run-p devNext genWatchRemote",
    "dockerClear": "docker ps -aq | xargs -I {} docker stop {}; docker ps -aq | xargs -I {} docker rm {}",
    "start": "next start",
    "export": "next export",
    "format": "prettier --write .",
    "gen": "graphql-codegen --config codegen.yml && prettier ./src/graphql/generated.ts --write --config .prettierrc && eslint ./src/graphql/generated.ts --fix",
    "genRemote": "graphql-codegen --config codegen.remote.yml && prettier ./src/graphql/generated.ts --write --config .prettierrc",
    "genWatch": "node ./hasura/wait-for-url.js && chokidar \"./src/graphql/gqls/**/*.gql\" \"./hasura/migrations/**/*.sql\" --initial -c \"yarn gen\"",
    "genWatchRemote": "chokidar \"./src/graphql/gqls/**/*.gql\" --initial -c \"yarn genRemote\"",
    "hasuraLocal": "run-p hasuraStart hasuraConsole",
    "hasuraStart": "(cd ./hasura; docker-compose up)",
    "hasuraConsole": "(cd ./hasura; node ./wait-for-url.js && hasura console --skip-update-check --no-browser --console-port 9696)",
    "migrateLocalToProd": "set -o allexport && . ./.env.local && set +o allexport && (cd ./hasura; hasura migrate apply --skip-update-check --endpoint \"$HASURA_PROD_SERVER_URL\" --admin-secret=$HASURA_PROD_ADMIN_SECRET; hasura metadata apply --skip-update-check --endpoint \"$HASURA_PROD_SERVER_URL\" --admin-secret=$HASURA_PROD_ADMIN_SECRET)",
    "migrationLocalApply": "set -o allexport && . ./.env.local && set +o allexport && (cd ./hasura; hasura migrate apply --skip-update-check --admin-secret=$HASURA_ADMIN_SECRET; hasura metadata apply --skip-update-check --admin-secret=$HASURA_ADMIN_SECRET)",
    "type-check": "tsc --pretty --noEmit",
    "remove-local-database": "(cd ./hasura; docker-compose down -v)",
    "test": "jest --env=jsdom --modulePathIgnorePatterns='\\.integration\\.'",
    "test:integration": "jest --env=node",
    "test:ci": "yarn test --runInBand --no-cache",
    "storybook": "start-storybook --ci -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "chromatic": "chromatic --exit-zero-on-changes",
    "lint": "eslint --fix -c ./.eslintrc.js src && next lint --fix -c ./.eslintrc.js src",
    "checkAll": "yarn lint && yarn test:ci && yarn build && yarn storybook --smoke-test",
    "push": "yarn checkAll && git push"
  },
  "dependencies": {
    "@auth0/nextjs-auth0": "^1.5.0",
    "@headlessui/react": "^1.4.0",
    "@hookform/resolvers": "^2.7.0",
    "@sentry/nextjs": "6.10.0",
    "@sentry/tracing": "^6.10.0",
    "@tailwindcss/forms": "^0.3.3",
    "@tailwindcss/typography": "^0.4.1",
    "classnames": "^2.3.1",
    "daisyui": "^1.10.0",
    "dayjs": "^1.10.6",
    "fs-extra": "^10.0.0",
    "graphql": "^15.5.1",
    "graphql-request": "^3.5.0",
    "graphql-tag": "^2.12.5",
    "gray-matter": "^4.0.3",
    "lodash": "^4.17.21",
    "next": "11.0.1",
    "next-themes": "^0.0.15",
    "pino": "^6.13.0",
    "pino-pretty": "^5.1.2",
    "query-string": "^7.0.1",
    "react": "17.0.2",
    "react-colorful": "^5.3.0",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.12.2",
    "react-icons": "^4.2.0",
    "react-query": "^3.19.1",
    "remark": "^13.0.0",
    "remark-html": "^13.0.1",
    "remark-prism": "^1.3.6",
    "sweetalert2": "^11.1.1",
    "sweetalert2-react-content": "^4.1.1",
    "uuid": "^8.3.2",
    "validator": "^13.6.0",
    "vfile": "^5.0.2",
    "zod": "^3.7.1"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.9",
    "@babel/preset-react": "^7.14.5",
    "@graphql-codegen/add": "^3.0.0",
    "@graphql-codegen/cli": "2.0.1",
