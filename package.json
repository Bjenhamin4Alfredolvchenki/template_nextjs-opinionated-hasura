{
  "name": "nextjs-opinionated-hasura",
  "version": "0.3.0",
  "scripts": {
    "build": "next build",
    "build:tailwind": "postcss src/scss/base.scss -o src/scss/tailwind.scss",
    "dev": "yarn dockerClear; concurrently 'yarn hasuraLocal' 'yarn genWatch' 'NODE_OPTIONS=\"--inspect\" next dev -p 3000 | pino-pretty -i time,pid,hostname -c'",
    "dockerClear": "docker ps -aq | xargs -I {} docker stop {}; docker ps -aq | xargs -I {} docker rm {}",
    "format": "prettier --write .",
    "gen": "graphql-codegen --config codegen.yml && prettier ./src/graphql/generated.ts --write --config .prettierrc",
    "genWatch": "bash ./hasura/wait-for-url.sh && chokidar \"./src/graphql/gqls/**/*.gql\" --initial -c \"yarn gen\"",
    "hasuraLocal": "(cd ./hasura; concurrently --raw 'docker-compose up' 'bash ./wait-for-url.sh && hasura console --skip-update-check --no-browser --console-port 9696')",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "migrationLocalApply": "export $(cat .env.local | xargs) && (cd ./hasura; hasura migrate apply --skip-update-check --admin-secret=$HASURA_ADMIN_SECRET; hasura metadata apply --skip-update-check --admin-secret=$HASURA_ADMIN_SECRET)",
    "start": "next start",
    "storybook": "start-storybook --ci -p 5000",
    "swr": "^0.4.2",
    "test": "jest",
    "test-all": "yarn lint && yarn type-check && yarn test",
    "type-check": "tsc --pretty --noEmit"
  },
  "dependencies": {
    "@tailwindcss/postcss7-compat": "^2.0.3",
    "autoprefixer": "^10.2.5",
    "graphql": "^15.5.0",
    "graphql-request": "^3.4.0",
    "graphql-tag": "^2.11.0",
    "lodash": "^4.17.21",
    "next": "10.0.8",
    "postcss": "^8.2.8",
    "postcss-cli": "^8.3.1",
    "postcss-loader": "^5.2.0",
    "query-string": "^6.14.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-icons": "^4.2.0",
    "swr": "^0.4.2",
    "sweetalert2": "^10.15.5",
    "sweetalert2-react-content": "^3.3.1",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@fullhuman/postcss-purgecss": "^4.0.2",
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "1.20.1",
    "@graphql-codegen/typescript": "1.21.0",
    "@graphql-codegen/typescript-graphql-request": "^3.0.2",
    "@graphql-codegen/typescript-operations": "1.17.14",
    "@storybook/addon-actions": "^6.1.21",
    "@storybook/addon-essentials": "^6.1.21",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-knobs": "^6.1.21",
    "@storybook/addon-links": "^6.1.21",
    "@storybook/addon-notes": "^5.3.21",
    "@storybook/addons": "^6.1.21",
    "@storybook/preset-create-react-app": "^3.1.7",
    "@storybook/react": "^6.1.21",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.34",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "chokidar-cli": "^2.1.0",
    "concurrently": "^6.0.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^5.1.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.4",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "react-docgen-typescript-loader": "^3.7.2",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  }
}
